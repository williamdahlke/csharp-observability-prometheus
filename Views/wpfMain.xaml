<Window x:Class="wpfPocAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfPocAPI"
        mc:Ignorable="d"
        Title="PoC API GIS Automation" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button Command="{Binding SaveProjectCommand}" Width="100" Height="40">Save Project</Button>
        <Button Command="{Binding UpdateAdvancedBomCommand}" Width="130" Height="40" Grid.Column="1"> Update Advanced BOM</Button>
        <Button Command="{Binding CheckinCommand}" Width="100" Height="40" Grid.Column="2">Check-in</Button>
        <Button Command="{Binding Generate3DCommand}" Width="100" Height="40" Grid.Column="3">Generate Project</Button>
    </Grid>
</Window>
